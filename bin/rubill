#!/usr/bin/env ruby
# -*- ruby -*-
# $Id$
require "rubygems"
require "ruport"
require 'yaml'

LIBDIR=File.dirname(__FILE__) + '/../lib'
$LOAD_PATH.unshift LIBDIR

Dir.glob(LIBDIR + '/rubill/*.rb') do |f|
  require 'rubill/' + File.basename(f)
end

options=InvoiceOptions.parse(ARGV)
options[:calendar]=ARGV[0] || InvoiceOptions.parse(['-h'])

Invoice.render_pdf(options)
